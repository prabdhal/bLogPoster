<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blogs - <%= title %></title>
</head>
<body>
  <h3>Blogs</h3>
  <a href="/blogs/new">New Article</a>
  <% articles.forEach(article => { %>
    <a href="/blogs/view/<%= article._id %>"><%= article.title %></a>
    <div><%= article.createdAt.toLocaleDateString() %></div>
    <div><%= article.author %></div>
    <p><%= article.description %></p>
    <a href="/blogs/edit/<%= article._id %>">Edit</a>
    <form action="/blogs/<%= article._id %>?_method=DELETE" method="POST">
      <button type="submit">Delete</button>
    </form>
  <% }) %>
</body>
</html>